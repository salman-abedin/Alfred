#!/bin/sh
#
# Wifi related scripts
# USAGE: wifi -l | [-c SSID PASS]

case "$1" in
    --show | -s) nmcli con show ;;
    --list | -l)
        doas -n nmcli radio wifi off
        doas -n nmcli radio wifi on
        sleep 3
        nmcli dev wifi list
        ;;
    --con | -c)
        doas -n nmcli dev wifi connect "${2:-$WIFI_SSID}" password "${3:-$WIFI_PASS}"
        ;;
esac

